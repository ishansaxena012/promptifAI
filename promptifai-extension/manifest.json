{
  "manifest_version": 3,
  "name": "PromptifAI",
  "description": "Enhance prompts using AI",
  "version": "1.0.0",

  "action": {
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "http://localhost:8000/*"
  ],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}
